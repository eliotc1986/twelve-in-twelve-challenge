<div class="post-content">
  <h1 class="post-title"><%= @post.title %></h1>
  <div class="post-details">
    <span class="date">Submitted <%= time_ago_in_words(@post.created_at) %> ago</span>
    | <%= link_to 'Edit', edit_post_path(@post) %>
    | <%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: 'Are you sure you want to delete this post?' }, class: "danger" %>
  </div>
  <p class="post-body">
    <%= @post.body %>
  </p>
</div>